{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "browsers": ["last 2 versions"]
        },
        "loose": true,
        "corejs": "3",
        "useBuiltIns": "usage",
        "shippedProposals": true,
        "modules": false
      }
    ],
    "@babel/preset-react"
  ],
  "plugins": [
    ["emotion", { "sourceMap": true, "autoLabel": true }],
    "@babel/plugin-proposal-class-properties"
  ],
  "env": {
    "test": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "modules": "commonjs",
            "useBuiltIns": "usage",
            "corejs": "3",
            "debug": false
          }
        ]
      ]
    },
    "server": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": {
              "node": "current"
            },
            "modules": "commonjs",
            "useBuiltIns": "usage",
            "corejs": "3",
            "shippedProposals": true
          }
        ]
      ]
    },
    "production": {
      "plugins": [
        ["emotion", { "hoist": true }],
        "@babel/plugin-proposal-class-properties"
      ]
    }
  }
}
